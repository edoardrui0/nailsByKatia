---
import BaseLayout from "@layouts/BaseLayout.astro";
import CTA from "@components/CTA.astro";
import Landing from "@components/Landing.astro";
import { getLocalePath, t } from "i18n:astro";

// Optimize our landing image and pass it as props to the BaseLayout (for preloading) and Landing (for rendering)
import { getOptimizedImage } from "@utils/utils";
import landingImage from "@assets/images/landing.jpg"; // <-- THE PATH TO THE ASSET YOU WANT TO PRELOAD - The asset must live in src
const optimizedImage = await getOptimizedImage(landingImage);
---

<BaseLayout
  title={t("services")}
  description="Meta description for the page"
  preloadedImage={optimizedImage}
>
  <!-- Landing -->

  <Landing title={t("service-1")} image={optimizedImage} />

  <!-- Service Info -->

  <section id="sbs-1980">
    <div class="cs-container">
      <div class="cs-content">
        <span class="cs-topper">Gel X Extensions In Tampa</span>
        <h2 class="cs-title">
          Lightweight Gel X Extensions That Look Natural And Last Longer
        </h2>
        <p class="cs-text">
          Gel X extensions are perfect if you want instant length with a light,
          comfortable feel. Katia focuses on clean prep and proper application
          so your set looks natural, holds up well, and does not feel bulky.
          Each nail is shaped to suit your hands, with attention to length,
          curve, and balance, so the final result feels tailored to you. Gel X
          is a great option if you want a polished, finished look for events,
          work, or everyday life without the heavy feeling that can come from
          thicker extensions.
        </p>
      </div>
      <div class="cs-wrapper">
        <ul class="cs-ul">
          <li class="cs-li">
            <img
              class="cs-li-icon"
              aria-hidden="true"
              src="https://csimg.nyc3.cdn.digitaloceanspaces.com/Images/Icons/tooth-gum.svg"
              decoding="async"
              alt="icon"
              width="80"
              height="80"
              loading="lazy"
            />
            <div class="cs-flex">
              <h3 class="cs-h3">Natural Length</h3>
              <p class="cs-li-text">
                Thin, natural looking length. Great if you want added length
                without a bulky look.
              </p>
            </div>
          </li>
          <li class="cs-li">
            <img
              class="cs-li-icon"
              aria-hidden="true"
              src="https://csimg.nyc3.cdn.digitaloceanspaces.com/Images/Icons/braces-rubber-bands.svg"
              decoding="async"
              alt="icon"
              width="80"
              height="80"
              loading="lazy"
            />
            <div class="cs-flex">
              <h3 class="cs-h3">Everyday Comfort</h3>
              <p class="cs-li-text">
                Comfortable to wear day to day. Ideal for clients who use their
                hands a lot at work or at home.
              </p>
            </div>
          </li>
          <li class="cs-li">
            <img
              class="cs-li-icon"
              aria-hidden="true"
              src="https://csimg.nyc3.cdn.digitaloceanspaces.com/Images/Icons/tooth-loosen.svg"
              decoding="async"
              alt="icon"
              width="80"
              height="80"
              loading="lazy"
            />
            <div class="cs-flex">
              <h3 class="cs-h3">Clean Details</h3>
              <p class="cs-li-text">
                Detailed shaping and cuticle work. Each nail is refined so your
                set looks neat from every angle.
              </p>
            </div>
          </li>
          <li class="cs-li">
            <img
              class="cs-li-icon"
              aria-hidden="true"
              src="https://csimg.nyc3.cdn.digitaloceanspaces.com/Images/Icons/crown-tooth.svg"
              decoding="async"
              alt="icon"
              width="80"
              height="80"
              loading="lazy"
            />
            <div class="cs-flex">
              <h3 class="cs-h3">Custom Color</h3>
              <p class="cs-li-text">
                Finished with your choice of gel color. You can keep it simple
                or choose a shade that stands out.
              </p>
            </div>
          </li>
        </ul>
        <div class="cs-image-group">
          <!--Image-->
          <picture class="cs-picture">
            <source
              media="(max-width: 600px)"
              srcset="https://csimg.nyc3.cdn.digitaloceanspaces.com/Images/People/dental-cleaning.jpeg"
            />
            <source
              media="(min-width: 601px)"
              srcset="https://csimg.nyc3.cdn.digitaloceanspaces.com/Images/People/dental-cleaning.jpeg"
            />
            <img
              loading="lazy"
              decoding="async"
              src="https://csimg.nyc3.cdn.digitaloceanspaces.com/Images/People/dental-cleaning.jpeg"
              alt="dental cleaning"
              width="704"
              height="752"
              aria-hidden="true"
            />
          </picture>
        </div>
      </div>
    </div>
  </section>
  <CTA />
</BaseLayout>

<style lang="less">
  /*-- -------------------------- -->
<---       Side by Side         -->
<--- -------------------------- -*/

  /* Mobile - 360px */
  @media only screen and (min-width: 0rem) {
    #sbs-1980 {
      padding: var(--sectionPadding);
      overflow: hidden;
      position: relative;

      .cs-container {
        width: 100%;
        max-width: (704/16rem);
        margin: auto;
        display: flex;
        flex-direction: column;
        align-items: center;
        /* 48px - 64px */
        gap: clamp(3rem, 6vw, 4rem);
      }

      .cs-content {
        text-align: left;
        width: 100%;
        display: flex;
        flex-direction: column;
        align-items: flex-start;
      }

      .cs-title,
      .cs-text {
        max-width: none;
      }

      .cs-wrapper {
        width: 100%;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        align-items: flex-start;
        /* 48px - 64px */
        gap: clamp(3rem, 6vw, 4rem);
      }

      .cs-ul {
        width: 100%;
        margin: 0;
        padding: 0;
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        gap: (32/16rem);
      }

      .cs-li {
        list-style: none;
        margin: 0;
        /* 24px - 32px */
        padding: 0 0 (32/16rem) 0;
        border-bottom: 1px solid var(--primaryLight);
        display: flex;
        align-items: flex-start;
        gap: (32/16rem);

        &:last-of-type {
          padding: 0;
          border: none;
        }
      }

      .cs-li-icon {
        /* 64px - 80px */
        width: clamp(4rem, 8vw, 5rem);
        height: auto;
        display: block;
      }

      .cs-h3 {
        /* 20px - 25px */
        font-size: clamp(1.25rem, 2.5vw, 1.5625rem);
        font-weight: 700;
        line-height: 1.2em;
        text-align: left;
        margin: 0 0 (16/16rem) 0;
        color: var(--headerColor);
        transition: color 0.3s;
      }

      .cs-li-text {
        font-size: (16/16rem);
        line-height: 1.5em;
        text-align: left;
        margin: 0;
        color: var(--bodyTextColor);
        opacity: 0.8;
      }

      .cs-image-group {
        width: 100%;
        height: (680/16rem);
        max-height: (752/16rem);
        position: relative;
        z-index: 1;
      }

      .cs-box {
        text-align: left;
        width: 100%;
        /* prevents padding and border from affecting height and width */
        box-sizing: border-box;
        /* 20px - 40px */
        padding: (24/16rem);
        border-top: 32px solid #fff;
        display: inline-flex;
        flex-direction: column;
        justify-content: center;
        align-items: flex-start;
        gap: (8/16rem);
        position: absolute;
        left: 0;
        bottom: 0;
        z-index: 10;

        &:before {
          content: "";
          width: 100%;
          height: 100%;
          background-color: var(--primaryLight);
          position: absolute;
          top: 0;
          left: 0;
        }
      }

      .cs-topper {
        z-index: 1;
      }

      .cs-h2 {
        font-size: (31/16rem);
        font-weight: 900;
        line-height: 1.2em;
        margin: 0 0 (16/16rem) 0;
        color: var(--headerColor);
        position: relative;
        z-index: 10;
      }

      .cs-box-ul {
        margin: 0;
        padding-left: 0;
        display: flex;
        flex-direction: column;
        gap: (8/16rem);
      }

      .cs-box-li {
        /* 14px - 18px */
        font-size: clamp(0.875rem, 1.3vw, 1.125rem);
        line-height: 1.5em;
        list-style: none;
        margin: 0;
        color: var(--bodyTextColor);
        display: flex;
        justify-content: flex-start;
        align-items: center;
        gap: (12/16rem);
        position: relative;
      }

      .cs-icon {
        /* 24px - 32px */
        width: clamp(1.5rem, 3vw, 2rem);
        height: auto;
        display: block;
      }

      .cs-picture {
        width: 100%;
        height: 100%;
        display: block;
        position: absolute;
        top: 0;
        left: 0;

        img {
          width: 100%;
          height: 100%;
          object-fit: cover;
          border-radius: (16/16rem);
          position: absolute;
          top: 0;
          left: 0;
        }
      }
    }
  }

  /* Tablet - 768px */
  @media only screen and (min-width: 48rem) {
    #sbs-1980 {
      .cs-image-group {
        height: clamp(36.25rem, 72.5vw, 47rem);
      }

      .cs-box {
        width: 60%;
        padding: clamp(2rem, 6vw, 3.75rem) clamp(1.5rem, 3vw, 2.5rem);
        border-right: 32px solid #fff;
      }
    }
  }

  /* Small Desktop - 1024px */
  @media only screen and (min-width: 64rem) {
    #sbs-1980 {
      .cs-container {
        max-width: (1280/16rem);
      }

      .cs-wrapper {
        flex-direction: row;
        align-items: stretch;
      }

      .cs-ul {
        max-width: (440/16rem);
        order: 2;
      }

      .cs-image-group {
        height: auto;
        max-height: 100%;
        width: 55%;
      }

      .cs-box {
        width: 80%;
      }
    }
  }

  /* Large Desktop - 1300px */
  @media only screen and (min-width: 81.25rem) {
    #sbs-1980 {
      .cs-ul {
        max-width: (478/16rem);
      }

      .cs-box {
        width: 70%;
      }
    }
  }

  /* Dark Mode */
  @media only screen and (min-width: 0rem) {
    body.dark-mode {
      #sbs-1980 {
        background-color: var(--dark);

        .cs-title,
        .cs-text,
        .cs-h3,
        .cs-li-text {
          color: var(--bodyTextColorWhite);
        }

        .cs-li {
          border-color: rgba(255, 255, 255, 0.2);
        }

        .cs-text,
        .cs-li-text {
          opacity: 0.8;
        }

        .cs-box {
          border-color: var(--dark);
        }
      }
    }
  }
</style>
