---
import { getLocalePath, t } from "i18n:astro";

import katiaIMG from "@assets/images/katia.jpg";
---

<!-- {t("home:extra.topper")} --><!-- {getLocalePath("/about")} --><!-- About -->
<section id="sbs-1373">
    <div class="cs-container">
        <div class="cs-content">
            <span class="cs-topper">{t("home:about.topper")}</span>
            <h2 class="cs-title">{t("home:about.title")}</h2>
            <p class="cs-text">
                {t("home:about.p1")}
                <br /><br />
                {t("home:about.p2")}
            </p>
            <a href={getLocalePath("/about")} class="cs-button-solid"
                >About Katia</a
            >
        </div>
        <div class="cs-flex">
            <picture class="cs-picture">
                <!--Mobile Image-->
                <source media="(max-width: 600px)" srcset={katiaIMG.src} />
                <!--Tablet and above Image-->
                <source media="(min-width: 601px)" srcset={katiaIMG.src} />
                <img
                    loading="lazy"
                    decoding="async"
                    src={katiaIMG.src}
                    alt="person in cafe"
                    width="414"
                    height="627"
                />
            </picture>
            <div class="cs-quote">
                <img
                    class="cs-icon"
                    loading="lazy"
                    decoding="async"
                    aria-hidden="true"
                    src="https://csimg.nyc3.cdn.digitaloceanspaces.com/Icons/oeange-quotes.svg"
                    alt="appliance"
                    width="120"
                    height="99"
                />
                <p class="cs-quote-text">
                    {t("home:about.quote")}
                </p>
            </div>
        </div>
    </div>
</section>

<style lang="less">
    /*-- -------------------------- -->
<---        Side By Side        -->
<--- -------------------------- -*/

    /* Mobile - 360px */
    @media only screen and (min-width: 0rem) {
        #sbs-1373 {
            padding: var(--sectionPadding);
        }
        #sbs-1373 .cs-container {
            width: 100%;
            max-width: 80rem;
            margin: auto;
            display: flex;
            flex-direction: column;
            align-items: center;
            /* 48px - 64px */
            gap: clamp(3rem, 6vw, 4rem);
        }
        #sbs-1373 .cs-content {
            /* set text align to left if content needs to be left aligned */
            text-align: center;
            width: 100%;
            max-width: 36.5rem;
            display: flex;
            flex-direction: column;
            /* centers content horizontally, set to flex-start to left align */
            align-items: center;
        }

        #sbs-1373 .cs-topper {
            color: #767676;
        }
        #sbs-1373 .cs-title {
            max-width: 20ch;
        }
        #sbs-1373 .cs-text {
            margin-bottom: 1rem;
        }
        #sbs-1373 .cs-text:last-of-type {
            margin-bottom: 2rem;
        }
        #sbs-1373 .cs-content-flair {
            width: 100%;
            margin: 0 0 2rem;
            display: flex;
            flex-direction: column;
            gap: 1.25rem;
        }
        #sbs-1373 .cs-bar {
            width: 100%;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            gap: 0.5rem;
        }
        #sbs-1373 .cs-h3 {
            font-size: 1rem;
            line-height: 1.2em;
            font-weight: 700;
            margin: 0;
            width: 100%;
            color: var(--headerColor);
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        #sbs-1373 .cs-progress {
            width: 100%;
            height: 8px;
            border-radius: 10px;
            overflow: hidden;
            background-color: #e8e8e8;
        }
        #sbs-1373 .cs-progress-bar {
            width: var(--progress);
            height: 100%;
            border-radius: 10px;
            background-color: var(--primary);
            display: block;
        }
        #sbs-1373 .cs-percentage {
            font-size: 0.875rem;
            line-height: 1.2em;
            font-weight: 700;
            margin: 0;
            color: var(--headerColor);
            display: block;
        }
        #sbs-1373 .cs-button-solid {
            font-size: 1rem;
            line-height: 3.5rem;
            text-decoration: none;
            font-weight: 700;
            overflow: hidden;
            margin: 0;
            color: #fff;
            padding: 0 3rem;
            border-radius: 0.5rem;
            background-color: var(--primary);
            display: inline-block;
            position: relative;
            z-index: 1;
            transition: color 0.3s;
        }
        #sbs-1373 .cs-button-solid:before {
            content: "";
            position: absolute;
            display: block;
            height: 100%;
            width: 0%;
            background: #1a1a1a;
            opacity: 1;
            top: 0;
            left: 0;
            z-index: -1;
            transition: width 0.3s;
        }
        #sbs-1373 .cs-button-solid:hover {
            color: var(--primary);
        }
        #sbs-1373 .cs-button-solid:hover:before {
            width: 100%;
        }
        #sbs-1373 .cs-flex {
            max-width: 56.5rem;
            display: flex;
            flex-direction: column;
            justify-content: center;
            /* 16px - 20px */
            gap: clamp(1rem, 2.3vw, 1.25rem);
        }
        #sbs-1373 .cs-picture {
            width: 100%;
            height: 90vw;
            min-height: 20.5rem;
            max-height: 28.125rem;
            /* 24px - 48px */
            border-radius: clamp(1.5rem, 4vw, 3rem);
            /* clips the img tag corners */
            overflow: hidden;
            display: block;
            position: relative;
        }
        #sbs-1373 .cs-picture img {
            width: 100%;
            height: 100%;
            object-fit: cover;
            position: absolute;
            top: 0;
            left: 0;
        }
        #sbs-1373 .cs-quote {
            /* 24px - 60px */
            padding: clamp(1.5rem, 5vw, 3.75rem);
            /* prevents padding from affecting height and width */
            box-sizing: border-box;
            display: flex;
            flex-direction: column;
            align-items: flex-start;
            /* 80px - 150px */
            gap: clamp(5rem, 10vw, 9.375rem);
            position: relative;
            z-index: 1;
        }
        #sbs-1373 .cs-quote:before {
            /* background color in pseudo so we can use the color variable */
            content: "";
            width: 100%;
            height: 100%;
            /* 24px - 48px */
            border-radius: clamp(1.5rem, 4vw, 3rem);
            background: var(--primary);
            opacity: 0.1;
            position: absolute;
            display: block;
            top: 0;
            left: 0;
        }
        #sbs-1373 .cs-icon {
            /* 80px - 120px */
            width: clamp(5rem, 10vw, 7.5rem);
            height: auto;
            opacity: 0.3;
            display: block;
        }
        #sbs-1373 .cs-quote-text {
            /* 20px - 31px */
            font-size: clamp(1.25rem, 2vw, 1.9375rem);
            line-height: 1.2em;
            font-weight: 700;
            margin: 0;
            color: var(--bodyTextColor);
        }
    }
    /* Tablet - 768px */
    @media only screen and (min-width: 43.75rem) {
        #sbs-1373 .cs-flex {
            flex-direction: row;
        }
        #sbs-1373 .cs-picture {
            width: 100%;
            height: auto;
            max-height: 100%;
            /* sends it to the right in the 2nd position */
            order: 2;
        }
        #sbs-1373 .cs-quote {
            width: 100%;
        }
    }
    /* Large Desktop 1300px */
    @media only screen and (min-width: 81.25rem) {
        #sbs-1373 .cs-container {
            flex-direction: row;
            align-items: stretch;
        }
        #sbs-1373 .cs-content {
            width: 23.0625rem;
            text-align: left;
            align-items: flex-start;
            /* prevents flexbox from squishing it */
            flex: none;
            /* sends it to the right in the 2nd position */
            order: 2;
        }
        #sbs-1373 .cs-quote {
            justify-content: space-between;
        }
    }
</style>
